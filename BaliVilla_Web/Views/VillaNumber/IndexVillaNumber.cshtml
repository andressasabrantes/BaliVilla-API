@model IEnumerable<BaliVilla_Web.Models.Dto.VillaNumberDTO>

<div class="container p-3 border">
    <div class="row pb-1">
        <div class="col">
            <h1 class="text-secondary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-2">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-secondary"><i class="bi bi-plus-square-fill"></i> Create New Villa Number</a>
        </div>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>
                    Villa Name
                </th>
                <th>
                    Villa Number
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Villa.Name</td>
                    <td>@item.VillaNo</td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVillaNumber" asp-route-villaNo="@item.VillaNo" class="btn btn-info"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Villa" asp-action="DeleteVillaNumber" asp-route-villaNo="@item.VillaNo" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>