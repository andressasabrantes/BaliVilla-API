@model BaliVilla_Web.Models.Dto.LoginRequestDTO

<form method="post">
    <div class="container pt-5">
        <div class="row text-center pt-2 m-6">
            <h2>Login</h2>
        </div>
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" type="text" class="form-control" placeholder="Username" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="text" class="form-control" placeholder="Password" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="btn btn-success form-control" value="Login">Login</button>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}